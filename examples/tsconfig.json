{
    "include": [
      "./client/**/*.ts",
      "./shared/**/*.ts"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "preserve",
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "easyhard-common": ["../build/common"],
            "easyhard-bridge": ["../build/bridge"]
        }
    }
}
