{
  "include": [
    "server/**/*.ts",
    "client/**/*.ts"
  ],
  "exclude": [
    "server/assets/*",
    "server/test/fixtures/*"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "lib": [
      "ES2015"
    ]
  }
}
