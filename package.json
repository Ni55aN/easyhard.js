{
  "scripts": {
    "build": "MODE=prod rollup -c",
    "postbuild": "for d in build/*; do (cd \"$d\" && npm pack --pack-destination ..); done",
    "build:dev": "MODE=dev rollup -cw",
    "lint": "eslint packages/*/src/**",
    "lint:examples": "eslint examples/client/** examples/server/** examples/shared/**",
    "test": "jest --verbose",
    "commit": "git-cz",
    "postinstall": "for d in packages/*; do (cd \"$d\" && npm i --legacy-peer-deps); done"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ni55aN/easyhard.js.git"
  },
  "author": "Vitaliy Stoliarov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ni55aN/easyhard.js/issues"
  },
  "homepage": "https://github.com/Ni55aN/easyhard.js#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.2.1",
    "@testing-library/jest-dom": "^5.12.0",
    "@types/cookie": "^0.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.11",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "commitizen": "4.2.2",
    "cookie": "^0.4.1",
    "core-js": "^3.7.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.27.0",
    "eslint-loader": "^4.0.2",
    "express": "^4.17.1",
    "fast-check": "^2.7.0",
    "fromentries": "^1.2.1",
    "fs-extra": "^9.0.1",
    "history": "^5.0.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "recast": "^0.20.4",
    "rollup": "^2.48.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rxjs": "^7.1.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.2",
    "typescript": "^4.2.4",
    "ws": "^7.4.5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.2.0"
  },
  "engines": {
    "npm": ">=7.0.0"
  }
}
